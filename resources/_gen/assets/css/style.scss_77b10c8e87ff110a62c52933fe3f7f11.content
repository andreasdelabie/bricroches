:root{--background1:hsla(35, 36%, 96%, 1);--background2:hsla(34, 34%, 90%, 1);--text:hsla(33, 54%, 17%, 1);--text2:hsla(36, 32%, 30%, 1)}body{padding:0;margin:0;font-family:inter,sans-serif;color:var(--text)}body a{text-decoration:underline;color:var(--text)}body a:hover,body a :focus{color:var(--text2)}header,footer{min-height:10vh;padding:0 5vw;display:grid;grid-template-columns:1fr 2fr 1fr;background-color:var(--background2)}header *,footer *{margin:0;display:flex;align-items:center}header .left,footer .left{justify-content:flex-start}header .center,footer .center{justify-content:center;text-align:center}header .center nav,footer .center nav{display:flex;justify-content:center;gap:1rem}header .right,footer .right{justify-content:flex-end}main{min-height:80dvh;padding:10vh 25vw;box-sizing:border-box;background-color:var(--background1)}@media screen and (max-width:768px){main{padding:5vh 5vw}}.image-gallery{display:flex;justify-content:center;gap:1rem;flex-wrap:wrap}.image-scroller-wrapper{width:100%;position:relative;border-radius:1rem;box-shadow:0 5px 25px rgba(0,0,0,.25)}.image-scroller-wrapper .image-scroller{display:flex;width:100%;height:60vh;overflow-x:scroll;overflow-y:hidden;scroll-behavior:smooth;scroll-snap-type:x mandatory;scrollbar-width:none;border-radius:1rem}.image-scroller-wrapper .image-scroller .image{flex:1 0 100%;scroll-snap-align:center;cursor:pointer}.image-scroller-wrapper .image-scroller .image img{width:100%;height:100%;object-fit:cover;object-position:center}.image-scroller-wrapper nav{position:absolute;display:flex;gap:.5rem;bottom:1.5rem;left:50%;transform:translateX(-50%)}.image-scroller-wrapper nav a{width:16px;height:16px;border-radius:100%;border:2px solid var(--background2)}.image-scroller-wrapper nav a:hover,.image-scroller-wrapper nav a:focus{background-color:var(--background2)}