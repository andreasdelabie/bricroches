:root{--background1:hsla(35, 36%, 96%, 1);--background2:hsla(34, 34%, 90%, 1);--text:hsla(33, 54%, 17%, 1);--text2:hsla(36, 32%, 30%, 1)}body{padding:0;margin:0;font-family:inter,sans-serif;color:var(--text)}body a{text-decoration:underline;color:var(--text)}body a:hover,body a :focus{color:var(--text2)}header .desktop,header .mobile,footer{min-height:10vh;padding:0 5vw;display:grid;grid-template-columns:1fr 2fr 1fr;background-color:var(--background2);text-wrap:balance}header .desktop *,header .mobile *,footer *{margin:0;display:flex;flex-direction:column;justify-content:center}header .desktop .left,header .mobile .left,footer .left{align-items:start}header .desktop .center,header .mobile .center,footer .center{align-items:center;text-align:center}header .desktop .center nav,header .mobile .center nav,footer .center nav{display:flex;align-items:center;gap:1rem}header .desktop .right,header .mobile .right,footer .right{align-items:end}@media screen and (max-width:768px){header .desktop{display:none}}header .mobile .menu{display:none;position:fixed;top:0;left:0;z-index:1;width:100%;height:100%;padding:3vh 5vw;box-sizing:border-box;background-color:var(--background2)}header .mobile .menu img{margin-bottom:15vh}header .mobile .menu a{font-size:2rem}header .mobile .menu nav{display:flex;flex-direction:column;gap:1rem}@media screen and (min-width:768px){header .mobile{display:none}}@media screen and (max-width:768px){footer{display:flex;flex-direction:column;align-items:center;gap:.5rem;padding:1rem 5vw;text-align:center}}main{min-height:80dvh;padding:10vh 25vw;box-sizing:border-box;background-color:var(--background1)}@media screen and (max-width:768px){main{padding:5vh 5vw}}.image-gallery{display:flex;justify-content:center;gap:1rem;flex-wrap:wrap}.image-scroller-wrapper{width:100%;position:relative;border-radius:1rem;box-shadow:0 5px 25px rgba(0,0,0,.25)}.image-scroller-wrapper .image-scroller{display:flex;width:100%;height:60vh;overflow-x:scroll;overflow-y:hidden;scroll-behavior:smooth;scroll-snap-type:x mandatory;scrollbar-width:none;border-radius:1rem}.image-scroller-wrapper .image-scroller .image{flex:1 0 100%;scroll-snap-align:center;cursor:pointer}.image-scroller-wrapper .image-scroller .image img{width:100%;height:100%;object-fit:cover;object-position:center}.image-scroller-wrapper nav{position:absolute;display:flex;gap:.5rem;bottom:1.5rem;left:50%;transform:translateX(-50%)}.image-scroller-wrapper nav a{width:16px;height:16px;border-radius:100%;border:2px solid var(--background2)}.image-scroller-wrapper nav a:hover,.image-scroller-wrapper nav a:focus{background-color:var(--background2)}